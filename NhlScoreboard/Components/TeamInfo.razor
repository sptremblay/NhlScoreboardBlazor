@using NhlScoreboard.Models


<div class="d-flex flex-column align-items-center">
    <span class="team-logo logo-bg-dark--team-@Team?.id"></span>
    <h2>@Team?.name</h2>
    <span>(@LeagueRecord?.wins - @LeagueRecord?.losses)</span>
</div>

@code {

    [Parameter]
    public LeagueRecord LeagueRecord { get; set; }

    [Parameter]
    public Team Team { get; set; }

}